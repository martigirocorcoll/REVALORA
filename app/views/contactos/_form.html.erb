
<%= simple_form_for(@contacto) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :apellido %>
    <%= f.input :telefono %>
    <%= f.input :correo %>
    <%= f.input :immo %>
    <%= f.input :tipo %>
    <%= f.input :detalle %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
